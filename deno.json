{
    "name": "@yieldray/json-rpc-ts",
    "version": "0.2.1",
    "exports": "./mod.ts",
    "publish": {
        "include": [
            "LICENSE",
            "README.md",
            "src/**/*.ts",
            "mod.ts",
            "deno.json"
        ],
        "exclude": [
            ".github",
            "src/**/*.test.ts"
        ]
    },
    "compilerOptions": {
        "strict": true,
        "useUnknownInCatchVariables": true,
        "noImplicitOverride": true
    },
    "imports": { "@std/assert": "jsr:@std/assert@^1.0.6" },
    "tasks": {
        "lint": "deno lint",
        "fmt": "deno fmt",
        "docs": "deno doc --html --name=json-rpc-ts --output=./docs/ ./mod.ts",
        "test": "deno test --parallel --coverage --trace-leaks",
        "cov:gen": "deno coverage coverage --lcov --output=cov.lcov",
        "cov:view": "deno coverage --html coverage",
        "cov:clean": "rm -rf ./coverage/ cov.lcov",
        "build": "deno run -A build.ts"
    },
    "fmt": {
        "lineWidth": 80,
        "semiColons": false,
        "indentWidth": 4,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": [
            "src",
            ".github",
            "deno.json",
            "README.md",
            "*.ts"
        ]
    },
    "exclude": [
        ".git",
        "docs",
        "coverage",
        "dist"
    ]
}
